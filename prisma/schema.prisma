generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String
  user_type String?
  password  String? @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  City City[]
  Experience Experience[]
  School School[]

  @@map("users")
}

model Student {
  id               String    @id @default(uuid())
  name             String
  classId          String
  createdAt        DateTime? @default(now())
  Class            Class     @relation(fields: [classId], references: [id])
  experiences      ExperienceStudent[]

  @@map("students")
}


model School {
  id              String  @id @default(uuid())
  name            String
  cityId          String
  userId          String

  City City @relation(fields: [cityId], references: [id])
  User User @relation(fields: [userId], references: [id])
  Class Class[]

  @@map("schools")
}

model City {
  id            String  @id @default(uuid())
  name          String
  userId        String

  User User @relation(fields: [userId], references: [id])

  School School[]

  @@map("cities")
}

model Class {
  id             String  @id @default(uuid())
  name           String
  schoolId       String
  grade          Int

  School  School    @relation(fields: [schoolId], references: [id])
  Student Student[]

  @@map("classes")
}

model Subject {
  id          String               @id @default(uuid())
  name        String
  templates   ExperienceTemplate[] 

  @@map("subjects")
}

model ExperienceTemplate {
  id        String       @id @default(uuid())
  name      String       
  subjectId String

  subject   Subject      @relation(fields: [subjectId], references: [id])
  experiences Experience[]

  @@map("experience_templates")
}

model Experience {
  id               String    @id @default(uuid())
  templateId       String
  userId           String
  pin              String
  joinCode         String?
  enterDate        DateTime?

  template         ExperienceTemplate @relation(fields: [templateId], references: [id])
  user             User               @relation(fields: [userId], references: [id])
  students         ExperienceStudent[]

  @@map("experiences")
}

model ExperienceStudent {
  id           String   @id @default(uuid())
  experienceId String
  studentId    String

  experience   Experience @relation(fields: [experienceId], references: [id])
  student      Student    @relation(fields: [studentId], references: [id])

  @@unique([experienceId, studentId])
  @@map("experience_students")
}
